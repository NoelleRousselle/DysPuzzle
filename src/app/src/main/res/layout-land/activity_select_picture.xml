<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.SelectPicture">

    <ImageView
        android:id="@+id/iV_camera"
        android:layout_width="82dp"
        android:layout_height="83dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tB_selectPicture"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_camera_enhance_black_24" />

    <TableLayout
        android:id="@+id/tB_selectPicture"
        android:layout_width="wrap_content"
        android:layout_height="285dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/iV_topLeft"
                android:layout_width="200dp"
                android:layout_height="125dp"
                android:padding="5dp"
                app:layout_constraintBottom_toTopOf="@+id/iV_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iV_picture"
                app:layout_constraintTop_toBottomOf="@+id/iV_picture"
                app:srcCompat="@drawable/bild1" />

            <ImageView
                android:id="@+id/iV_topRight"
                android:layout_width="200dp"
                android:layout_height="125dp"
                android:padding="5dp"
                app:layout_constraintBottom_toTopOf="@+id/iV_picture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/iV_picture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/bild2" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/iV_bottomLeft"
                android:layout_width="200dp"
                android:layout_height="125dp"
                android:padding="5dp"
                app:layout_constraintBottom_toTopOf="@+id/iV_picture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/iV_picture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/bild3" />

            <ImageView
                android:id="@+id/iV_bottomRight"
                android:layout_width="200dp"
                android:layout_height="125dp"
                android:padding="5dp"
                app:layout_constraintBottom_toTopOf="@+id/iV_camera"
                app:layout_constraintEnd_toStartOf="@+id/iV_picture"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iV_picture"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/bild4" />
        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>