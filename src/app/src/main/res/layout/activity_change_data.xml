<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="navigation.ChangeData">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="301dp"
        android:layout_height="310dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tV_gender"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Geschlecht"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="159dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cB_male"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="m채nnlich" />

                <CheckBox
                    android:id="@+id/cB_female"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="weiblich" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cB_yes"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:text="Ja" />

            <CheckBox
                android:id="@+id/cB_no"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nein" />

            <ImageView
                android:id="@+id/iV_info"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/info"
                tools:layout_editor_absoluteX="401dp"
                tools:layout_editor_absoluteY="135dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tV_dislexia"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Gibt es Hinweise auf eine Lese-/Rechtschreibschw채che?"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tB_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Alter"
            android:inputType="text|number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cB_righthanded"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:text="Rechtsh채nder" />

            <CheckBox
                android:id="@+id/cB_lefthanded"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:text="Linksh채nder" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitte geben Sie die Daten ihres Kindes ein!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625" />

</android.support.constraint.ConstraintLayout>